# Launch rofi
mod1 + space
  rofi -show drun

# Launch rofi in window modi
mod1 + w
  rofi -show window

# Launch rofi in clipboard modi
mod1 + C
  rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# Change keyboard layout
ctrl + space
  xkb-switch -n && pkill -RTMIN+11 dwmblocks

# Toggle external display
mod1 + XF86Launch1
  autorandr --change

# Lock session
XF86Launch1
  xset s activate

# Volime control
XF86AudioRaiseVolume
  pulsemixer --change-volume +5 && pkill -RTMIN+10 dwmblocks

XF86AudioLowerVolume
  pulsemixer --change-volume -5 && pkill -RTMIN+10 dwmblocks

XF86AudioMute
  pulsemixer --toggle-mute && pkill -RTMIN+10 dwmblocks

# App bindings
mod1 + o ; w
  firefox

mod1 + o ; t
  thunderbird

mod1 + o ; r
  remmina

mod1 + o ; k
  keepassxc

mod1 + o ; m
  winbox
